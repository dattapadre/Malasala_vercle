<%-include("Navbar")%>
<div class="container my-3">
  <div class="profile-container">
    <div class="profile-header">
      <img src="/upload/<%=admin.photo%>" class="avatar mb-3" alt="Avatar" />
      <h3 class="mb-1"><%=admin.name%></h3>
      <p class="mb-0"><%=admin.email%></p>
      <div class="social-links mt-3">
        <a href="#"><i class="fab fa-github"></i></a>
        <a href="#"><i class="fab fa-linkedin"></i></a>
        <a href="#"><i class="fab fa-twitter"></i></a>
        <a href="#"><i class="fab fa-instagram"></i></a>
      </div>
    </div>
    <form
      action="/admin/update_profile"
      method="post"
      enctype="multipart/form-data"
    >
      <div class="p-4">
        <div class="row">
          <div class="col-lg-12">
            <div class="info-card">
              <h5 class="mb-4">
                <i class="fas fa-info-circle me-2 text-primary"></i>Personal
                Information
              </h5>

              <div class="row mb-3">
                <div class="col-sm-3 info-label">Full Name</div>
                <div class="col-sm-9">
                  <input
                    type="text"
                    name="name"
                    class="form-control"
                    value="<%=admin.name%>"
                    required
                  />
                </div>
              </div>

              <div class="row mb-3">
                <div class="col-sm-3 info-label">Email</div>
                <div class="col-sm-9">
                  <input
                    type="email"
                    name="email"
                    class="form-control"
                    value="<%=admin.email%>"
                    required
                  />
                </div>
              </div>

              <div class="row mb-3">
                <div class="col-sm-3 info-label">Phone</div>
                <div class="col-sm-9">
                  <input
                    type="tel"
                    name="mobile"
                    class="form-control"
                    value="<%=admin.mobile%>"
                    required
                  />
                </div>
              </div>

              <div class="row mb-4">
                <div class="col-sm-3 info-label">Password</div>
                <div class="col-sm-9">
                  <div class="input-group">
                    <input
                      type="password"
                      name="password"
                      id="passwordInput"
                      class="form-control"
                      value="<%=admin.password%>"
                      required
                    />
                    <button
                      class="btn btn-outline-secondary"
                      type="button"
                      id="togglePassword"
                    >
                      <i class="fas fa-eye" id="toggleIcon"></i>
                    </button>
                  </div>
                </div>
              </div>

            <div class="d-flex justify-content-end">
                <div class="col-sm-3 info-label">Upload Image</div>
               <input class="form-control" type="file" accept="image/*" name="image" id="">
              </div>

              <div class="d-flex justify-content-end mt-4">
                <button type="submit" class="btn btn-edit text-white">
                  <i class="fas fa-save me-1"></i> Save Changes
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>

<style>
  .profile-container {
    background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
    border-radius: 15px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    overflow: hidden;
  }
  .profile-header {
    color: white;
    padding: 30px 0;
    text-align: center;
    background: #4c4a86;
  }
  .avatar {
    width: 120px;
    height: 120px;
    object-fit: cover;
    border: 4px solid white;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    transition: all 0.3s ease;
  }
  .avatar:hover {
    transform: scale(1.05);
  }
  .info-card {
    background: white;
    border-radius: 10px;
    padding: 20px;
    margin-bottom: 20px;
    box-shadow: 0 3px 10px rgba(0, 0, 0, 0.05);
  }
  .info-label {
    font-weight: 600;
    color: #6c757d;
  }
  .form-control {
    border: 1px solid #e0e0e0;
    border-radius: 8px;
    padding: 10px 15px;
  }
  .form-control:focus {
    border-color: #764ba2;
    box-shadow: 0 0 0 0.25rem rgba(118, 75, 162, 0.25);
  }
  .btn-edit {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border: none;
    padding: 10px 25px;
    border-radius: 30px;
    font-weight: 500;
    transition: all 0.3s ease;
  }
  .btn-edit:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(118, 75, 162, 0.3);
  }
  .social-links a {
    color: #6c757d;
    font-size: 20px;
    margin: 0 10px;
    transition: all 0.3s ease;
  }
  .social-links a:hover {
    color: white;
    transform: scale(1.2);
  }
</style>

<script>
  document
    .getElementById("togglePassword")
    .addEventListener("click", function () {
      const passwordInput = document.getElementById("passwordInput");
      const toggleIcon = document.getElementById("toggleIcon");

      const type =
        passwordInput.getAttribute("type") === "password" ? "text" : "password";
      passwordInput.setAttribute("type", type);

      toggleIcon.classList.toggle("fa-eye");
      toggleIcon.classList.toggle("fa-eye-slash");
    });
</script>

<%-include("Footer")%>
