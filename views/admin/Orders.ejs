
<%- include("Navbar") %>

<div class="container bg-white p-4 mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="banner d-flex align-items-center rounded-3">
            <h3 class="text-white px-3">Orders Status</h3>
            <div class="stripes"></div>
           </div>
        </div>

      </div>

  <div class="table-responsive border p-4 rounded mt-5">
<div class="table-responsive">
  <table id="paintingsTable" class="table table-bordered table-striped text-center align-middle">
    <thead>
      <tr>
        <th>Sr.No</th>
        <th>User Name</th>
        <th class="d-none d-md-table-cell">Mobile</th>
        <th class="d-none d-md-table-cell">Type</th>
        <th class="d-none d-md-table-cell">Address</th>
        <th class="d-none d-md-table-cell">Image</th>
        <th>Created At</th>
        <th>Status</th>
      </tr>
    </thead>

    <tbody>
      <% orders.forEach((item, i) => { %>
        <tr>
          <td><%= i + 1 %></td>
          <td><%= item.userName %></td>
          <td class="d-none d-md-table-cell"><%= item.mobile %></td>
          <td class="d-none d-md-table-cell"><%= item.type %></td>
          <td class="d-none d-md-table-cell"><%= item.address %></td>
          <td class="d-none d-md-table-cell">
            <img src="/upload/<%= item.image %>" alt="Order Image" style="height: 60px;" class="img-thumbnail">
          </td>
          <td><%= new Date(item.created_at).toISOString().split('T')[0] %></td>
          <td>
            <% if(item.order_status == 'start') { %>
              <a href="/admin/updatestart/<%= item.id %>?email=<%= encodeURIComponent(item.email) %>">
                <button class="btn btn-primary btn-sm">Start</button>
              </a>
            <% } else if(item.order_status == 'working') { %>
              <a href="/admin/updateworking/<%= item.id %>?email=<%= encodeURIComponent(item.email) %>">
                <button class="btn btn-warning btn-sm">Working</button>
              </a>
            <% } else if(item.order_status == 'done') { %>
              <a href="/admin/updatedone/<%= item.id %>?email=<%= encodeURIComponent(item.email) %>">
                <button class="btn btn-success btn-sm">Done</button>
              </a>
            <% } else if(item.order_status == 'completed') { %>
              <button class="btn btn-danger btn-sm">Completed</button>
            <% } %>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

  </div>
</div>

